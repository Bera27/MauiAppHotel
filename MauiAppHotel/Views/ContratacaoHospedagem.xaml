<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem" NavigationPage.HasNavigationBar="False" BackgroundColor="{StaticResource OffBlack}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10" >
        <Label 
            Text="Cáculo da diária"
            FontFamily="Ponomar"
            FontSize="50"
            TextColor="#57a6a8" />

        <Frame Padding="10">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" />

                    <Label Grid.Row="0" Grid.Column="1" TextColor="#517a7b" Text="{Binding Value}" BindingContext="{x:Reference stp_adultos}" />

                    <Stepper x:Name="stp_adultos"  Grid.Row="0" Grid.Column="2" Minimum="0" Maximum="4" Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" />

                    <Label Grid.Row="1" Grid.Column="1" TextColor="#517a7b" Text="{Binding Value}" BindingContext="{x:Reference stp_criancas}" />

                    <Stepper x:Name="stp_criancas" Grid.Row="1" Grid.Column="2" Minimum="0" Maximum="4" Increment="1" />

                </Grid>

                <Label Text="Escolha sua Suíte" />

                <Picker x:Name="pck_quarto" Title="Selecione sua Acomodação" ItemDisplayBinding="{Binding Descricao}" />

                <Frame Padding="10" Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" />
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin" DateSelected="dtpck_checkin_DateSelected" Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout" Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avançar" Clicked="Button_Clicked" />

            </VerticalStackLayout>
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>